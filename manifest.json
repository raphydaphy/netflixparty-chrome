{
  "manifest_version": 2,

  "name": "Netflix Party+",
  "description": "Watch Netflix with your friends while in self-isolation - now with more funcionality!",
  "version": "2.0",
  "permissions": [
      "activeTab",
      "declarativeContent",
      "storage",
      "webNavigation",
      "identity",
      "identity.email",
      "https://*.netflix.com/*",
      "https://netflixparty.raphydaphy.com/*"
  ],
  "page_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    },
    "default_title": "Netflix Party+",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": ["inc/*"]
}
